# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ecommerce

# Redis
REDIS_URL=redis://localhost:6379

# Auth Service (RS256 JWT validation)
AUTH_SERVICE_URL=http://localhost:8001
JWT_PUBLIC_KEY=  # Optional — fetched from auth service if empty

# Secret Key — REQUIRED in production, must be at least 32 characters
# Generate with: openssl rand -base64 48
# In debug mode, app will warn but continue; in production, it will fail to start.
SECRET_KEY=

# App
DEBUG=true
